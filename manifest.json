{
    "manifest_version": 3,
    "name": "CMC Market Snap",
    "version": "0.1.0",
    "description": "Generate a shareable crypto market update image from CoinMarketCap.",
    "permissions": ["activeTab", "scripting", "downloads", "storage"],
    "host_permissions": ["https://coinmarketcap.com/*"],
    "action": {
      "default_title": "CMC Market Snap",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://coinmarketcap.com/*"],
        "js": ["content.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  